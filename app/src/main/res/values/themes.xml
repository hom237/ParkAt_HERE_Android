<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hackers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Hackers" parent="Base.Theme.Hackers" />

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/transparent
        </item> <!-- 팝업 메뉴의 배경을 투명하게 설정 -->
        <item name="android:dropDownHorizontalOffset">-4dp
        </item> <!-- 분리 선과 메뉴 아이템 사이의 가로 오프셋을 설정 -->
        <item name="android:dropDownVerticalOffset">-4dp</item> <!-- 분리 선과 메뉴 아이템 사이의 세로 오프셋을 설정 -->
    </style>

    <style name="Theme.Hackers.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Hackers.AppWidgetContainer" parent="Theme.Hackers.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>